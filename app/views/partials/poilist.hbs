<section class="ui raised segment">
    <div class="ui grid">
        <aside class="two wide column">
            <img src="images/poi.jpg" class="ui small image">
        </aside>
        <article class="fifteen wide column">
            <table class="ui celled table segment">
                <form action="/deletePoi" method="POST">
                <thead>
                <tr>
                    <th>Created by</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                  {{#each poi}}
                    <tr>
                        <td>{{creator.firstName}} {{creator.lastName}}</td>
                        <td> {{name}} </td>
                        <td> {{location}} </td>
                        <td> {{description}}</td>
                        <td> {{category.title}}</td>
                        <td><a href="/deletePoi/{{poi}}" class="ui icon button">
                                <i class="icon trash"></i>
                            </a>
                        </td>
                    </tr>
                  {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>

